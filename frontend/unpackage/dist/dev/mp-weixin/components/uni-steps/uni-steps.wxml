<view class="uni-steps"><view class="{{['uni-steps-items','uni-steps-'+direction]}}"><block wx:for="{{steps}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="{{['uni-steps-item',item.status?'uni-steps-'+item.status:'']}}"><view class="uni-steps-item-circle-container"><block wx:if="{{item.status!=='process'}}"><view class="uni-steps-item-circle" style="{{'background-color:'+(item.status==='finish'?activeColor:'')+';'}}"></view></block><block wx:else><view class="uni-steps-item-circle" style="{{'background-color:'+(activeColor)+';'}}"></view></block></view><block wx:if="{{index!==steps.length-1}}"><view class="uni-steps-item-line" style="{{'background-color:'+(item.status==='finish'?activeColor:'')+';'}}"></view></block><view class="uni-steps-item-title-container" style="{{'color:'+(item.status==='process'?activeColor:'')+';'}}"><view class="uni-steps-item-title">{{item.title}}</view><block wx:if="{{item.desc}}"><view class="uni-steps-item-desc">{{item.desc}}</view></block></view></view></block></view></view>